# OpenAI API Key (Required)
OPENAI_API_KEY=sk-proj-your-key-here

# Firecrawl API Key (for web scraping in context generation)
FIRECRAWL_API_KEY=fc-your-key-here

# GitHub Integration (Phase 0 - Git Automation)
# Authentication mode: "pat" (Personal Access Token) or "app" (GitHub App - not yet implemented)
GITHUB_AUTH_MODE=pat

# Personal Access Token (create at: https://github.com/settings/tokens)
# Required scopes: repo, workflow
GITHUB_PAT=ghp_your_personal_access_token_here

# GitHub repository details
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# Agency API URL (used by tools to call backend)
AGENCY_API_URL=http://localhost:8000
